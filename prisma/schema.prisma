generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Payment {
  id               String    @id @default(cuid())
  client_id        String
  amount           String
  payment_date     DateTime? @default(now())
  bank             String
  comment          String?
  transaction_code String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  name             String
  status           Status    @default(EN_PROCESO)
}

model PaymentPromise {
  id               String    @id @default(cuid())
  valid_until      DateTime
  contract_id      String
  amount           String
  bank             String
  name             String
  transaction_code String
  payment_date     DateTime? @default(now())
  created_at       DateTime  @default(now())
  updated_at       DateTime  @updatedAt
  status           Status    @default(EN_PROCESO)

  @@map("payment_promise")
}

model User {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String   @unique
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
  password  String
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
}

enum Status {
  APROBADO
  RECHAZADO
  EN_PROCESO
}
